<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE screen-definitions [
	<!ELEMENT screen-definitions  (template-read-type? , screen+ )>
	<!ELEMENT template-read-type  (#PCDATA )>
	<!ELEMENT screen  (screen-name , template? , template-path? , template-file? , content-type? , parameter* )>
	<!ELEMENT screen-name  (#PCDATA )>
	<!ELEMENT template  (#PCDATA )>
	<!ELEMENT template-path  (#PCDATA )>
	<!ELEMENT template-file  (#PCDATA )>
	<!ELEMENT content-type  (#PCDATA )>
	<!ELEMENT parameter EMPTY>
	<!ATTLIST parameter  key           CDATA  #REQUIRED
	                     attribute      (include | file | class | text )  #IMPLIED
	                     template-path CDATA  #IMPLIED
	                     template-file CDATA  #IMPLIED
	                     value         CDATA  #IMPLIED >
]>
<screen-definitions>
  <screen>
    <screen-name>default</screen-name>
    <template>/index.jsp</template>
    <content-type>text/html;charset=utf-8</content-type>
  </screen>

  <screen>
    <screen-name>ApplicationException</screen-name>
    <template>/jsp/common/exception/applicationexception.jsp</template>
    <content-type>text/html;charset=utf-8</content-type>
  </screen>
  <screen>
    <screen-name>SystemException</screen-name>
    <template>/jsp/common/exception/systemexception.jsp</template>
    <content-type>text/html;charset=utf-8</content-type>
  </screen>

  <!-- 关闭刷新 -->
  <screen>
    <screen-name>close</screen-name>
    <template>/jsp/common/close.jsp</template>
  </screen>

  <!-- 刷新 -->
  <screen>
    <screen-name>refresh</screen-name>
    <template>/jsp/common/refresh.jsp</template>
  </screen>

  
  <!--**************************************************************************************************************-->	
  <!--测试页面-->
  <screen>
    <screen-name>test</screen-name>
    <template>/jsp/test/test.jsp</template>
  </screen>	
  
  <!--测试页面-->
  <screen>
    <screen-name>home</screen-name>
    <template>/jsp/test/test.jsp</template>
  </screen> 

</screen-definitions>
